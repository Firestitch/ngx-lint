{
  "root": true,
  "extends": [
    "./.eslintrc.json"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "rules": {
        "import/no-extraneous-dependencies": "off",
        "@angular-eslint/component-selector": [
          "error",
          {
            "style": "kebab-case",
            "type": ["element", "attribute"]
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "style": "camelCase",
            "type": "attribute"
          }
        ]
      }      
    }
  ]
}